<launch>
	<arg name="marker_size" default="6.22" />
	<arg name="max_new_marker_error" default="0.08" />
	<arg name="max_track_error" default="0.2" />
	<arg name="cam_image_topic" default="/myrobot/body_camera/color/image_raw" />
	<arg name="cam_info_topic" default="/myrobot/body_camera/color/camera_info" />
	<arg name="output_frame" default="/body_camera_color_optical_frame" />
  <arg name="bundle_files" default="$(find detect)/config/markers.xml" />

	<node name="ar_track_alvar" pkg="ar_track_alvar" type="findMarkerBundlesNoKinect" respawn="false" output="screen" 
        args="$(arg marker_size) 
              $(arg max_new_marker_error) 
              $(arg max_track_error) 
              $(arg cam_image_topic) 
              $(arg cam_info_topic) 
              $(arg output_frame) 
              $(arg bundle_files)" />

